<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Pages.ContinuGamePages.DeleteGamePage"
             Title="DeleteGamePage"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
        <Border
            x:Name="DeleteGameBorder"
            BackgroundColor="DarkOrange"
            Padding="20"
            StrokeShape="RoundRectangle 10"
                Margin="15">
                <Label
                    x:Name="DeleteGameLabel"
                    Text="Weet je zeker dat je deze game wilt verwijderen?"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="25"/>
        </Border>
        <Button
            x:Name="BackButton"
            Text="Terug"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="BackButton_Clicked"
            Margin="60">
        </Button>
        <Button
            x:Name="DeleteButton"
            Text="Verwijder"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="DeleteButton_Clicked">
        </Button>
    </VerticalStackLayout>
</ContentPage>