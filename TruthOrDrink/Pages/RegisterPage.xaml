<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Pages.RegisterPage"
             Title="RegisterPage"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
        <Frame 
            BackgroundColor="Cyan" 
            CornerRadius="5" 
            Padding="10" 
            Margin="15"
            WidthRequest="300"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label 
                Text="Registreren"
                VerticalOptions="Center"
                FontSize="25"
                HorizontalOptions="Center" />
        </Frame>
        <Label 
            Text="Gebruikersnaam"
            FontSize="16"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0, 10, 0, 0" />
        <Entry
            Placeholder="Gebruikersnaam"
            x:Name="UsernameEntry"
            MaxLength="200"
            WidthRequest="200"
            Margin="0, 0, 0, 10" />
        <Label
            Text="Wachtwoord"
            FontSize="16"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0, 10, 0, 0" />
        <Entry
            Placeholder="Wachtwoord"
            IsPassword="True"
            MaxLength="200"
            WidthRequest="200"
            x:Name="PasswordEntry"
            Margin="0, 0, 0, 10" />
        <Label Text="Bevestig wachtwoord"
               FontSize="16"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0, 10, 0, 0" />
        <Entry IsPassword="True"
                MaxLength="200"
                WidthRequest="200"
                Placeholder="Bevestig wachtwoord"
                x:Name="ConfirmPasswordEntry"
                Margin="0, 0, 0, 10" />
        <Button
            Text="Registreren"
            Clicked="RegisterButton_Clicked"
            Margin="0, 40, 0, 0" />

        <Button
            Text="Terug"
            Clicked="BackToLoginButton_Clicked"
            Margin="0, 50, 0, 0" />
    </VerticalStackLayout>
</ContentPage>